#!/usr/bin/env bash
# Displays the PID and process name of processes containing "bash" in their name
pgrep -f bash | while read -r pid; do
# Check if the process still exists and get the executable path
if [ -e "/proc/$pid/exe" ]; then
exe_path=$(readlink -f "/proc/$pid/exe")
if [ -n "$exe_path" ]; then
echo "$pid $exe_path ($(echo -n "$exe_path" | wc -c) chars long)"
fi
fi
done
